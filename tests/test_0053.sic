struct subvalues
{
    int a;
    int b;
};

struct values
{
    int a;
    struct subvalues b;
};

int test(struct values *v)
{
    v->a = 10;
    v->b.a = 20;
    v->b.b = 30;
    
    if (v->a != 10)
        return 1;

    if (v->b.a != 20)
        return 2;

    if (v->b.b != 30)
        return 3;

    if (sizeof(v) != 8)
        return 4;

    if (sizeof(*v) != 24)
        return 5;

    if (sizeof(v->b) != 16)
        return 6;

    return 0;
}

int main()
{
    struct values v;

    int res = test(&v);
    if (res)
        return res;

    if (sizeof(struct values) != 24)
        return 7;

    if (sizeof(struct subvalues) != 16)
        return 8;

    return 0;
}
